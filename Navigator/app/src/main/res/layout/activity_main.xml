<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.development.cosmic_m.navigator.MapsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_id">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <RelativeLayout
            android:id="@+id/container_for_mini_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/image_id"
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:layout_alignParentBottom="true"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/btn_remove_picture"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/cancel_image"
                android:layout_alignTop="@id/image_id"
                android:layout_toRightOf="@+id/image_id"/>

            <ImageView
                android:id="@+id/btn_target"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="477dp"
                android:layout_toRightOf="@+id/image_id"/>

            <ImageView
                android:id="@+id/btn_transit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@id/image_id"
                android:layout_toRightOf="@+id/image_id"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/btnFindPath"
                android:background="@drawable/custom_button"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="12dp"
                android:text="PATH"/>
            <Button
                android:id="@+id/showAllPlaces"
                android:background="@drawable/custom_button"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentBottom="@id/btnFindPath"
                android:text="SHOW"/>
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="19dp"
                android:src="@mipmap/ic_distance"
                android:id="@+id/imageView"/>
            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 km"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="23dp"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>