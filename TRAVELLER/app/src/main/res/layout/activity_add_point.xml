<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:hint="latitude"
        android:id="@+id/tvLatitude"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/tvLatitude"
        android:hint="longitude"
        android:id="@+id/tvLongitude"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:text="ADD POINT"
        android:id="@+id/btn_add_point"/>

    <ImageButton
        android:id="@+id/camera_image_id"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvLongitude"
        android:foregroundGravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/camera_image_id"
        android:hint="notations..."
        android:id="@+id/et_notations"/>

</RelativeLayout>